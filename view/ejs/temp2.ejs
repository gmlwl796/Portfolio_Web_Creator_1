<!DOCTYPE html>
<html>
<title>My PORTFOLIO</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" type="text/css" href="/view/css/base.css">    
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">   
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">    
        
<style>
body, h1,h2,h3,h4,h5,h6 {font-family: "Montserrat", sans-serif}
.w3-row-padding img {margin-bottom: 12px}
/* Set the width of the sidebar to 120px */
.w3-sidebar {width: 120px;background: #222;}
/* Add a left margin to the "page content" that matches the width of the sidebar (120px) */
#main {margin-left: 120px}
/* Remove margins from "page content" on small screens */
@media only screen and (max-width: 600px) {#main {margin-left: 0}}
</style>
<body class="w3-black">

<!-- Icon Bar (Sidebar - hidden on small screens) -->
<nav class="w3-sidebar w3-bar-block w3-small w3-hide-small w3-center">
  <!-- Avatar image in top left corner -->
  <img src="http://data.1freewallpapers.com/download/emma-watson-2013-23-1400x1050.jpg" style="width:100%">
  <a href="#" class="w3-bar-item w3-button w3-padding-large w3-black">
    <i class="fa fa-home w3-xxlarge"></i>
    <p>HOME</p>
  </a>
  <a href="#about" class="w3-bar-item w3-button w3-padding-large w3-hover-black">
    <i class="fa fa-user w3-xxlarge"></i>
    <p>ABOUT</p>
  </a>
  <a href="#career" class="w3-bar-item w3-button w3-padding-large w3-hover-black">
    <i class="fa fa-eye w3-xxlarge"></i>
    <p>CAREER</p>
  </a>
  <a href="#contact" class="w3-bar-item w3-button w3-padding-large w3-hover-black">
    <i class="fa fa-envelope w3-xxlarge"></i>
    <p>CONTACT</p>
  </a>
</nav>

<!-- Navbar on small screens (Hidden on medium and large screens) -->
<div class="w3-top w3-hide-large w3-hide-medium" id="myNavbar">
  <div class="w3-bar w3-black w3-opacity w3-hover-opacity-off w3-center w3-small">
    <a href="#" class="w3-bar-item w3-button" style="width:25% !important">HOME</a>
    <a href="#about" class="w3-bar-item w3-button" style="width:25% !important">ABOUT</a>
    <a href="#photos" class="w3-bar-item w3-button" style="width:25% !important">CAREER</a>
    <a href="#contact" class="w3-bar-item w3-button" style="width:25% !important">CONTACT</a>
  </div>
</div>

<!-- Page Content -->
<div class="w3-padding-large" id="main">
  <!-- Header/Home -->
  <header class="w3-container w3-padding-32 w3-center w3-black" id="home">
    <h1 class="w3-jumbo"><span class="w3-hide-small">I'm</span> <%= dname %>. </h1>

    <img src="http://data.1freewallpapers.com/download/emma-watson-2013-23-1400x1050.jpg" alt="boy" class="w3-image" width="992" height="1108">
  </header>

  <!-- About Section -->
  <div class="w3-content w3-justify w3-text-grey w3-padding-64" id="about">
    <h2 class="w3-text-light-grey">My Name</h2>
    <hr style="width:200px" class="w3-opacity">
    <p>
    		<% if (portfolio) { %>
                <p><%= portfolio.introduce %></p>
        	<% } %>
      
    </p>
  
    <h3 class="w3-padding-16 w3-text-light-grey">My Skills</h3>
    <% if (portfolio) { %>
        <% if (portfolio.skills) { %>
        <% for(var i = 0; i< JSON.parse(portfolio.skills).length; i++){%> 
            <p class="w3-wide"><%= JSON.parse(portfolio.skills)[i].skill %></p>
            <div class="w3-white">
              <div class="w3-container w3-center w3-padding-small w3-dark-grey" style="height:28px; width:<%= JSON.parse(portfolio.skills)[i].percentage%>%"><%= JSON.parse(portfolio.skills)[i].percentage%>%</div>
            </div>
        <% }; %>
        <% } %>
   <% } %>
    
    
  
  <!-- Portfolio Section -->
  <div class="w3-padding-64 w3-content" id="career">
    <h2 class="w3-text-light-grey">My Career</h2>
    <hr style="width:200px" class="w3-opacity">
    <div class="w3-row w3-center w3-padding-16 w3-section w3-light-grey">
        <% if (portfolio) { %>
            <% if (portfolio.careers) { %>
            <% for(var i = 0; i< JSON.parse(portfolio.careers).length; i++){%> 
                <div class="w3-quarter w3-section">
                    <%= JSON.parse(portfolio.careers)[i].career %>
                </div>
                <% }; %>
            <% } %>
        <% } %>
    </div>       
    </div>
    
      <!-- works Section -->
  <div class="w3-padding-64 w3-content" id="works">
    <h2 class="w3-text-light-grey">My Works</h2>
    <hr style="width:200px" class="w3-opacity">
        <h3 class="w3-padding-16 w3-text-light-grey"><center><i class="fa fa-download"></i>Download File</center></h3>
        <div class="file-upload-read">

        </div>
    </div>
    

  <!-- Contact Section -->
    <% if (portfolio) { %>
  <div class="w3-padding-64 w3-content w3-text-grey" id="contact">
    <h2 class="w3-text-light-grey">Contact Me</h2>
    <hr style="width:200px" class="w3-opacity">
    
    <div class="w3-section">
        <% if (portfolio.homepage) { %>
      <p><i class="fa fa-map-marker fa-fw w3-text-white w3-xxlarge w3-margin-right"></i> homepage: <%= portfolio.homepage %></p>
        <% } %>
        <% if (portfolio.phone) { %>
      <p><i class="fa fa-phone fa-fw w3-text-white w3-xxlarge w3-margin-right"></i> Phone: <%= portfolio.phone %></p>
      <% } %>
    </div><br>
    <% } %>
  <!-- End Contact Section -->
  </div>
  
    <!-- Footer -->
  <footer class="w3-content w3-padding-64 w3-text-grey w3-xlarge">
    <p class="w3-medium">Powered by <a href="/" target="_blank" class="w3-hover-text-green"> Make your portfolio</a></p>
  <!-- End footer -->
  </footer>

<!-- END PAGE CONTENT -->
</div>
    <br><br><br><br><br>
    <article class="container">
        <section class="comment-panel">

        </section>
    </article>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="/view/js/comment.js"></script>
    <script src="/view/js/file.js"></script>
</body>
</html>

<!DOCTYPE html>
<html>
<title>My PORTFOLIO</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" type="text/css" href="/view/css/base.css">    
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">  
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">    
    
<style>
body, h1,h2,h3,h4,h5,h6 {font-family: "Montserrat", sans-serif}
.w3-row-padding img {margin-bottom: 50px}
.bgimg {
    background-position: center;
    background-repeat: no-repeat;
    background-size: auto;
    background-image: url('https://i.pinimg.com/originals/f7/d8/97/f7d8977935a3ef91038141f04e7e759c.png');
    min-height: 100%;
}

</style>
<body>

<!-- Sidebar with image -->
<nav class="w3-sidebar w3-hide-medium w3-hide-small" style="width:40%">
  <div class="bgimg"></div>
</nav>

<!-- Hidden Sidebar (reveals when clicked on menu icon)-->
<nav class="w3-sidebar w3-black w3-animate-right w3-xxlarge" style="display:none;padding-top:150px;right:0;z-index:2" id="mySidebar">
  <a href="javascript:void(0)" onclick="closeNav()" class="w3-button w3-black w3-xxxlarge w3-display-topright" style="padding:0 12px;">
    <i class="fa fa-remove"></i>
  </a>
  <div class="w3-bar-block w3-center">
    <a href="#" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">Home</a>
    <a href="#portfolio" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">Portfolio</a>
    <a href="#about" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">About</a>
    <a href="#contact" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">Contact</a>
  </div>
</nav>

<!-- Page Content -->
<div class="w3-main w3-padding-large" style="margin-left:40%">

  <!-- Menu icon to open sidebar -->
  <span class="w3-button w3-top w3-white w3-xxlarge w3-text-grey w3-hover-text-black" style="width:auto;right:0;" onclick="openNav()"><i class="fa fa-bars"></i></span>

  <!-- 자기소개 -->
  <header class="w3-container w3-center" style="padding:128px 16px" id="home">
    <h1 class="w3-jumbo"><b><%= dname %></b></h1>

    <img src="https://i.pinimg.com/originals/f7/d8/97/f7d8977935a3ef91038141f04e7e759c.png" class="w3-image w3-hide-large w3-hide-small w3-round" style="display:block;width:60%;margin:auto;">
    <img src="https://i.pinimg.com/originals/f7/d8/97/f7d8977935a3ef91038141f04e7e759c.png" class="w3-image w3-hide-large w3-hide-medium w3-round" width="1000" height="1333">
  </header>

  <!-- Portfolio Section -->
  <div class="w3-padding-32 w3-content" id="portfolio">
    <h2 class="w3-text-grey">My Portfolio</h2>
    <hr class="w3-opacity">
       <% if (portfolio) { %>
       <% if (portfolio.introduce) { %>
                <p><%= portfolio.introduce %></p>
        <% } %>
      <% } %>
      

  </div>
  <!-- About Section -->
  <div class="w3-content w3-justify w3-text-grey w3-padding-32" id="about">
    <h2>About</h2>
    <hr class="w3-opacity">
    
    <h3 class="w3-padding-16">My Skills</h3>
    <% if (portfolio) { %>
        <% if (portfolio.skills) { %>
        <% for(var i = 0; i< JSON.parse(portfolio.skills).length; i++){%> 
            <p class="w3-wide"><%= JSON.parse(portfolio.skills)[i].skill %></p>
            <div class="w3-light-grey">
              <div class="w3-container w3-center w3-padding-small w3-dark-grey" style="width:<%= JSON.parse(portfolio.skills)[i].percentage%>%"><%= JSON.parse(portfolio.skills)[i].percentage%>%</div>
            </div>
        <% }; %>
        <% } %>
   <% } %>
    
   <br><br><br>
    <h3 class="w3-padding-16">My Careers</h3>
    <div class="w3-row w3-center w3-dark-grey w3-padding-16 w3-section">
        <% if (portfolio) { %>
            <% if (portfolio.skills) { %>
            <% for(var i = 0; i< JSON.parse(portfolio.careers).length; i++){%> 
                <div class="w3-quarter w3-section">
                    <%= JSON.parse(portfolio.careers)[i].career %>
                </div>
                <% }; %>
            <% } %>
        <% } %>
    </div>       
    </div>
    
    
    <!-- Works Section -->
  <div class="w3-content w3-justify w3-text-grey w3-padding-32" id="work">
    <h2>My Works</h2>
    <hr class="w3-opacity">
    
      <h3 class="w3-padding-16"><i class="fa fa-download"></i>Download File</h3>
    <div class="file-upload-read">

    </div>
    </div>
    
    
    
    
  <br><br><br>
  <!-- Contact Section -->
  <div class="w3-padding-32 w3-content w3-text-grey" id="contact" style="margin-bottom:64px">
    <h2>Contact Me</h2>
    <hr class="w3-opacity"> 
    <div class="w3-section">
    <% if (portfolio) { %>
        <% if (portfolio.phone) { %>
      <p><i class="fa fa-phone fa-fw w3-xxlarge w3-margin-right"></i> Phone: <%= portfolio.phone %></p>
        <% } %>
        <% if (portfolio.homepage) { %>
      <p><i class="fa fa-envelope fa-fw w3-xxlarge w3-margin-right"> </i> homepage: <%= portfolio.homepage %></p>
        <% } %>
    </div>
    <% } %>
    
  <!-- End Contact Section -->
  </div>
  
  <!-- Footer -->
  <footer class="w3-container w3-padding-64 w3-light-grey w3-center w3-opacity w3-xlarge" style="margin:-24px">
    <p class="w3-medium">Powered by<a href="/" target="_blank" class="w3-hover-text-green">Make your portfolio</a></p>
  <!-- End footer -->
  </footer>
    <br><br>
            <article class="container">
            <section class="comment-panel">

            </section>
        </article>
<!-- END PAGE CONTENT -->
</div>
    


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="/view/js/comment.js"></script>
        <script src="/view/js/file.js"></script>
<script>
// Open and close sidebar
function openNav() {
    document.getElementById("mySidebar").style.width = "60%";
    document.getElementById("mySidebar").style.display = "block";
}

function closeNav() {
    document.getElementById("mySidebar").style.display = "none";
}
</script>
<script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/0.9.0rc1/jspdf.min.js"></script>
    
</body>
</html>
